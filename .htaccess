#

AddDefaultCharset UTF-8
RewriteEngine On

# tmp, for debug
#RedirectPermanent      /API/Events     http://www.ya.ru/


RewriteCond %{REQUEST_URI} (.*)
RewriteRule (install|public|styles|index.php|favicon.ico|apc.php) - [L]
#RewriteCond %{HTTPS} !=on
#RewriteRule (.*) https://%{SERVER_NAME}/$1 [R,L]
RewriteRule (.*) /index.php
Options -Indexes

<IfModule mod_headers.c>
    <FilesMatch "\.(css|js|png)$">
        Header set Cache-Control "max-age=600, proxy-revalidate"
    </FilesMatch>
</IfModule>


<IfModule mod_php5.c>
	# added by lissyara 2011-09-13 in 13:37 MSK
	php_flag magic_quotes_gpc	Off
	php_flag short_open_tag		Off
	php_flag output_buffering	Off
	# added by lissyara 2012-03-21 in 11:09 MSK
	php_flag log_errors		On
	php_flag display_errors		Off
	php_flag display_startup_errors	Off
</IfModule>


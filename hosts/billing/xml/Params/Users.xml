<?xml version="1.0" encoding="utf-8"?>
<!-- @author Alex Keda, for www.host-food.ru -->
<XML>
<!-- *********************************************************************** -->
<!-- *********************************************************************** -->
<Settings>
	<!-- настройки интерфейса пользователя -->
	<EdesksDisplay>
		<Title>Настройки интерфейса, "Система поддержки пользователей" (Тикеты)</Title>
		<Comment>Положение текста в тикете</Comment>
		<Type>Select</Type>
		<Options>
			<Right>Правое</Right>
			<Left>Левое</Left>
		</Options>
		<Check>ID</Check>
		<Attribs>
			<size>1</size>
			<style>width: 100%;</style>
			<prompt>Как отображать в системе поддержки аватары и текст</prompt>
		</Attribs>
		<IsDuty>0</IsDuty>
		<Value>Left</Value>
	</EdesksDisplay>
	<!-- *********************************************************************** -->
	<EdeskImagesPreview>
		<Comment>Отображать миниатюры изображений</Comment>
		<Type>Select</Type>
		<Options>
			<Yes>Да</Yes>
			<No>Нет</No>
		</Options>
		<Check>Char</Check>
		<Attribs>
			<size>1</size>
			<style>width: 100%;</style>
			<prompt>Включение/отключение предпросмотра приложенных к тикетам изображений/ссылок на изображения</prompt>
		</Attribs>
		<IsDuty>1</IsDuty>
		<Value>Yes</Value>
	</EdeskImagesPreview>
	<!-- *********************************************************************** -->
	<SendEdeskFilesToEmail>
		<Comment>Присылать вложения к тикетам на почту</Comment>
		<Type>Select</Type>
		<Options>
			<Yes>Да</Yes>
			<No>Нет</No>
		</Options>
		<Check>Char</Check>
		<Attribs>
			<size>1</size>
			<style>width: 100%;</style>
			<prompt>Присылать или нет прикрепленные к тикету файлы на почту</prompt>
		</Attribs>
		<IsDuty>1</IsDuty>
		<Value>Yes</Value>
	</SendEdeskFilesToEmail>
	<!-- *********************************************************************** -->
	<EdeskButtons>
		<Comment>Показывать только персональные кнопки</Comment>
		<Type>Select</Type>
		<Options>
			<Yes>Да</Yes>
			<No>Нет</No>
		</Options>
		<Check>Char</Check>
		<Attribs>
			<size>1</size>
			<style>width: 100%;</style>
			<prompt>Показывать кнопки относящиеся ко всем сотрудникам, или же показывать только свои</prompt>
		</Attribs>
		<IsDuty>1</IsDuty>
		<Value>No</Value>
	</EdeskButtons>
	<!-- *********************************************************************** -->
	<!-- *********************************************************************** -->
	<CreateInvoicesAutomatically>
		<Title>Настройки автоматической выписки счетов</Title>
		<Comment>Выписывать счета автоматически</Comment>
		<Type>Select</Type>
		<Options>
			<Yes>Да</Yes>
			<No>Нет</No>
		</Options>
		<Check>Char</Check>
		<Attribs>
			<size>1</size>
			<style>width: 100%;</style>
			<prompt>Включение/отключение еженедельной автоматической выписки счетов на оканчивающиеся услуги</prompt>
		</Attribs>
		<IsDuty>1</IsDuty>
		<Value>Yes</Value>
	</CreateInvoicesAutomatically>
	<!-- *********************************************************************** -->
	<InvoicingPeriod>
		<Comment>Период выписки счетов</Comment>
		<Type>Input</Type>
		<Attribs>
			<prompt>На какой период выписывать автоматически выставляемые счета на продление (дни 10-9999)</prompt>
			<type>text</type>
			<style>width: 100%;</style>
		</Attribs>
		<IsDuty>1</IsDuty>
		<Check>/^[0-9]{2,4}$/u</Check>
		<Value>365</Value>
	</InvoicingPeriod>
	<!-- *********************************************************************** -->
</Settings>
<!-- *********************************************************************** -->
</XML>


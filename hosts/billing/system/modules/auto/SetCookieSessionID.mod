<?php
#-------------------------------------------------------------------------------
$Args = Args();
#-------------------------------------------------------------------------------
if(IsSet($Args['SessionID'])){
  #-----------------------------------------------------------------------------
  $SessionID = $Args['SessionID'];
  #-----------------------------------------------------------------------------
  if(!SetCookie('SessionID',$SessionID,0,'/'))
    return ERROR | @Trigger_Error(500);
  #-----------------------------------------------------------------------------
  $_COOKIE['SessionID'] = $SessionID;
}
#-------------------------------------------------------------------------------
?>
<?php
#-------------------------------------------------------------------------------
$Redirects = Array('/'=>'/Index');
#-------------------------------------------------------------------------------
foreach(Array_Keys($Redirects) as $Location){
  #-----------------------------------------------------------------------------
  if($GLOBALS['__URI'] == $Location){
    #---------------------------------------------------------------------------
    Header(SPrintF('Location: %s',$Redirects[$Location]));
    #---------------------------------------------------------------------------
    Exit;
  }
}
#-------------------------------------------------------------------------------
?>
<XML>
<!-- *********************************************************************** -->
<Source>
 <TableID>VPSBonuses</TableID>
 <ColumnsIDs>
  <ListElement>ID</ListElement>
  <ListElement>CreateDate</ListElement>
  <ListElement>UserID</ListElement>
  <ListElement>DaysReserved</ListElement>
  <ListElement>DaysRemainded</ListElement>
  <ListElement>Discont</ListElement>
 </ColumnsIDs>
 <Conditions>
  <Message>Бонусов на виртуальные сервера не обнаружено.</Message>
 </Conditions>
</Source>
<!-- *********************************************************************** -->
<Comps>
 <Before>
  <Search>
   <Args>
    <ColumnsIDs>
     <ListElement>UserID</ListElement>
     <ListElement>SchemeID</ListElement>
     <ListElement>DaysRemainded</ListElement>
     <ListElement>Discont</ListElement>
    </ColumnsIDs>
   </Args>
  </Search>
 </Before>
 <!-- ********************************************************************** -->
 <After>
  <Delete>
   <Args>
    <Comment>Выбранные бонусы</Comment>
    <Send>
     <TableID>VPSBonuses</TableID>
    </Send>
   </Args>
  </Delete>
 </After>
</Comps>
<!-- *********************************************************************** -->
<Query>
 <SortOn>CreateDate</SortOn>
</Query>
<!-- *********************************************************************** -->
<Columns>
 <SelectID>
  <Args>
   <TableID>VPSBonuses</TableID>
  </Args>
 </SelectID>
 <!-- ********************************************************************** -->
 <Edit>
  <IsSorted>0</IsSorted>
  <Comp>Buttons/Window</Comp>
  <Args>
   <ListElement>/Administrator/VPSBonusEdit</ListElement>
   <ListElement>
    <VPSBonusID>%ID%</VPSBonusID>
   </ListElement>
   <ListElement>Редактировать бонус на виртуальные сервера</ListElement>
   <ListElement>Edit.gif</ListElement>
  </Args>
  <Attribs>
   <class>TableSuperStandard</class>
   <style>width:22px;</style>
  </Attribs>
 </Edit>
 <!-- ********************************************************************** -->
 <CreateDate>
  <Head>Дата созд.</Head>
  <Comp>Formats/Date/Extended</Comp>
  <Args>
   <ListElement>%CreateDate%</ListElement>
  </Args>
 </CreateDate>
 <!-- ********************************************************************** -->
 <Scheme>
  <Head>Тариф</Head>
  <Comp>Formats/String</Comp>
  <Args>
   <ListElement>%Scheme%</ListElement>
   <Length>15</Length>
  </Args>
  <Alias>IF(ISNULL(`SchemeID`),'Все тарифы',(SELECT CONCAT(`Name`,' (',(SELECT `Name` FROM `VPSServersGroups` WHERE `VPSSchemes`.`ServersGroupID` = `VPSServersGroups`.`ID`),')') FROM `VPSSchemes` WHERE `VPSSchemes`.`ID` = `VPSBonuses`.`SchemeID`))</Alias>
 </Scheme>
 <!-- ********************************************************************** -->
 <DaysReserved>
  <Head>Дней зарез.</Head>
  <Attribs>
   <style>text-align:right;</style>
  </Attribs>
 </DaysReserved>
 <!-- ********************************************************************** -->
 <DaysRemainded>
  <Head>Дней ост.</Head>
  <Attribs>
   <style>text-align:right;</style>
  </Attribs>
 </DaysRemainded>
 <!-- ********************************************************************** -->
 <Discont>
  <Head>Скидка</Head>
  <Comp>Formats/Percent</Comp>
  <Args>
   <ListElement>%Discont%</ListElement>
  </Args>
  <Attribs>
   <style>text-align:right;</style>
  </Attribs>
 </Discont>
 <!-- ********************************************************************** -->
 <Comment>
  <Head>Комментарий</Head>
  <Comp>Formats/String</Comp>
  <Args>
   <ListElement>%Comment%</ListElement>
   <Length>10</Length>
  </Args>
  <Alias>IF(LENGTH(`Comment`),`Comment`,'-')</Alias>
 </Comment>
</Columns>
<Sequence>
 <ListElement>SelectID</ListElement>
 <ListElement>Edit</ListElement>
 <ListElement>CreateDate</ListElement>
 <ListElement>Owner</ListElement>
 <ListElement>Scheme</ListElement>
 <ListElement>DaysReserved</ListElement>
 <ListElement>DaysRemainded</ListElement>
 <ListElement>Discont</ListElement>
 <ListElement>Comment</ListElement>
</Sequence>
<!-- *********************************************************************** -->
</XML>

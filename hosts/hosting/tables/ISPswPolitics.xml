<?xml version="1.0" encoding="utf-8"?>
<!-- @author Бреславский А.В. (Joonte Ltd.) -->
<XML>
<!-- *********************************************************************** -->
<Source>
 <TableID>ISPswPolitics</TableID>
 <ColumnsIDs>
  <ListElement>ID</ListElement>
  <ListElement>DaysPay</ListElement>
  <ListElement>Discont</ListElement>
 </ColumnsIDs>
 <Conditions>
  <Message>Ценовых политик на ПО ISpsystem не обнаружено.</Message>
 </Conditions>
</Source>
<!-- *********************************************************************** -->
<Comps>
 <Before>
  <Search>
   <Args>
    <ColumnsIDs>
     <ListElement>UserID</ListElement>
     <ListElement>SchemeID</ListElement>
     <ListElement>DaysPay</ListElement>
     <ListElement>Discont</ListElement>
    </ColumnsIDs>
   </Args>
  </Search>
 </Before>
 <!-- ********************************************************************** -->
 <After>
  <Delete>
   <Args>
    <Comment>Выбранные политики</Comment>
    <Send>
     <TableID>ISPswPolitics</TableID>
    </Send>
   </Args>
  </Delete>
 </After>
</Comps>
<!-- *********************************************************************** -->
<Query>
 <SortOn>Scheme</SortOn>
 <IsDesc>0</IsDesc>
</Query>
<!-- *********************************************************************** -->
<Columns>
 <SelectID>
  <Args>
   <TableID>ISPswPolitics</TableID>
  </Args>
 </SelectID>
 <!-- ********************************************************************** -->
 <Edit>
  <IsSorted>0</IsSorted>
  <Comp>Buttons/Window</Comp>
  <Args>
   <ListElement>/Administrator/ISPswPoliticEdit</ListElement>
   <ListElement>
    <ISPswPoliticID>%ID%</ISPswPoliticID>
   </ListElement>
   <ListElement>Редактировать ценовую политику на ПО ISpsystem</ListElement>
   <ListElement>Edit.gif</ListElement>
  </Args>
  <Attribs>
   <class>TableSuperStandard</class>
   <style>width:22px;</style>
  </Attribs>
 </Edit>
 <!-- ********************************************************************** -->
 <Group>
  <Head>Группа</Head>
  <Comp>Formats/String</Comp>
  <Args>
   <ListElement>%Group%</ListElement>
   <Length>15</Length>
  </Args>
  <Alias>(SELECT `Name` FROM `Groups` WHERE `Groups`.`ID` = `ISPswPolitics`.`GroupID`)</Alias>
 </Group>
 <!-- ********************************************************************** -->
 <User>
  <Head>Польз.</Head>
  <Comp>Formats/String</Comp>
  <Args>
   <ListElement>%User%</ListElement>
   <Length>15</Length>
  </Args>
  <Alias>(SELECT `Name` FROM `Users` WHERE `Users`.`ID` = `ISPswPolitics`.`UserID`)</Alias>
 </User>
 <!-- ********************************************************************** -->
 <Scheme>
  <Head>Тариф</Head>
  <Comp>Formats/String</Comp>
  <Args>
   <ListElement>%Scheme%</ListElement>
   <Length>25</Length>
  </Args>
  <Alias>IF(ISNULL(`SchemeID`),'Все тарифы',(SELECT `Name` FROM `ISPswSchemes` WHERE `ISPswSchemes`.`ID` = `ISPswPolitics`.`SchemeID`))</Alias>
 </Scheme>
 <!-- ********************************************************************** -->
 <DaysPay>
  <Head>Дней оплаты</Head>
  <Attribs>
   <style>text-align:right;</style>
  </Attribs>
 </DaysPay>
 <!-- ********************************************************************** -->
 <Discont>
  <Head>Скидка</Head>
  <Comp>Formats/Percent</Comp>
  <Args>
   <ListElement>%Discont%</ListElement>
  </Args>
  <Attribs>
   <style>text-align:right;</style>
  </Attribs>
 </Discont>
</Columns>
<Sequence>
 <ListElement>SelectID</ListElement>
 <ListElement>Edit</ListElement>
 <ListElement>Group</ListElement>
 <ListElement>User</ListElement>
 <ListElement>Scheme</ListElement>
 <ListElement>DaysPay</ListElement>
 <ListElement>Discont</ListElement>
</Sequence>
<!-- *********************************************************************** -->
</XML>

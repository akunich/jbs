<XML>
<!-- *********************************************************************** -->
<Source>
 <TableID>DomainsBonuses</TableID>
 <ColumnsIDs>
  <ListElement>ID</ListElement>
  <ListElement>CreateDate</ListElement>
  <ListElement>UserID</ListElement>
  <ListElement>YearsReserved</ListElement>
  <ListElement>YearsRemainded</ListElement>
  <ListElement>Discont</ListElement>
 </ColumnsIDs>
 <Conditions>
  <Message>Бонусов на домены не обнаружено.</Message>
 </Conditions>
</Source>
<!-- *********************************************************************** -->
<Comps>
 <Before>
  <Search>
   <Args>
    <ColumnsIDs>
     <ListElement>UserID</ListElement>
     <ListElement>SchemeID</ListElement>
     <ListElement>Discont</ListElement>
    </ColumnsIDs>
   </Args>
  </Search>
 </Before>
 <!-- ********************************************************************** -->
 <After>
  <Delete>
   <Args>
    <Comment>Выбранные бонусы</Comment>
    <Send>
     <TableID>DomainsBonuses</TableID>
    </Send>
   </Args>
  </Delete>
 </After>
</Comps>
<!-- *********************************************************************** -->
<Query>
 <SortOn>CreateDate</SortOn>
</Query>
<!-- *********************************************************************** -->
<Columns>
 <SelectID>
  <Args>
   <TableID>DomainsBonuses</TableID>
  </Args>
 </SelectID>
 <!-- ********************************************************************** -->
 <Edit>
  <IsSorted>0</IsSorted>
  <Comp>Buttons/Window</Comp>
  <Args>
   <ListElement>/Administrator/DomainBonusEdit</ListElement>
   <ListElement>
    <DomainBonusID>%ID%</DomainBonusID>
   </ListElement>
   <ListElement>Редактировать бонус на домен</ListElement>
   <ListElement>Edit.gif</ListElement>
  </Args>
  <Attribs>
   <class>TableSuperStandard</class>
   <style>width:22px;</style>
  </Attribs>
 </Edit>
 <!-- ********************************************************************** -->
 <CreateDate>
  <Head>Дата созд.</Head>
  <Comp>Formats/Date/Extended</Comp>
  <Args>
   <ListElement>%CreateDate%</ListElement>
  </Args>
 </CreateDate>
 <!-- ********************************************************************** -->
 <Scheme>
  <Head>Тариф</Head>
  <Comp>Formats/String</Comp>
  <Args>
   <ListElement>%Scheme%</ListElement>
   <Length>15</Length>
  </Args>
  <Alias>IF(ISNULL(`SchemeID`),'Не указан',(SELECT CONCAT(`Name`,' (',(SELECT `Name` FROM `Registrators` WHERE `Registrators`.`ID` = `DomainsSchemes`.`RegistratorID`),')') FROM `DomainsSchemes` WHERE `DomainsSchemes`.`ID` = `DomainsBonuses`.`SchemeID`))</Alias>
 </Scheme>
 <!-- ********************************************************************** -->
 <DomainsSchemesGroup>
  <Head>Группа доменов</Head>
  <Comp>Formats/String</Comp>
  <Args>
   <ListElement>%DomainsSchemesGroup%</ListElement>
   <Length>15</Length>
  </Args>
  <Alias>IF(ISNULL(`DomainsSchemesGroupID`),'Не указана',(SELECT `Name` FROM `DomainsSchemesGroups` WHERE `DomainsSchemesGroups`.`ID` = `DomainsBonuses`.`DomainsSchemesGroupID`))</Alias>
 </DomainsSchemesGroup>
 <!-- ********************************************************************** -->
 <YearsReserved>
  <Head>Лет зарез.</Head>
  <Attribs>
   <style>text-align:right;</style>
  </Attribs>
 </YearsReserved>
 <!-- ********************************************************************** -->
 <YearsRemainded>
  <Head>Лет ост.</Head>
  <Attribs>
   <style>text-align:right;</style>
  </Attribs>
 </YearsRemainded>
 <!-- ********************************************************************** -->
 <Discont>
  <Head>Скидка</Head>
  <Comp>Formats/Percent</Comp>
  <Args>
   <ListElement>%Discont%</ListElement>
  </Args>
  <Attribs>
   <style>text-align:right;</style>
  </Attribs>
 </Discont>
 <!-- ********************************************************************** -->
 <Comment>
  <Head>Комментарий</Head>
  <Comp>Formats/String</Comp>
  <Args>
   <ListElement>%Comment%</ListElement>
   <Length>10</Length>
  </Args>
  <Alias>IF(LENGTH(`Comment`),`Comment`,'-')</Alias>
 </Comment>
</Columns>
<Sequence>
 <ListElement>SelectID</ListElement>
 <ListElement>Edit</ListElement>
 <ListElement>CreateDate</ListElement>
 <ListElement>Owner</ListElement>
 <ListElement>Scheme</ListElement>
 <ListElement>DomainsSchemesGroup</ListElement>
 <ListElement>YearsReserved</ListElement>
 <ListElement>YearsRemainded</ListElement>
 <ListElement>Discont</ListElement>
 <ListElement>Comment</ListElement>
</Sequence>
<!-- *********************************************************************** -->
</XML>
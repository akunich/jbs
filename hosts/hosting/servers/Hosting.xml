<?xml version="1.0" encoding="utf-8"?>
<!-- @author Alex Keda, for www.host-food.ru -->
<XML>
<!-- *********************************************************************** -->
<Attribs>
	<SystemID>
		<Title>Общая информация</Title>
		<Comment>Система управления</Comment>
		<Type>Select</Type>
		<Options>
			<IspManager4>IspManager4</IspManager4>
			<DirectAdmin>DirectAdmin</DirectAdmin>
			<Plesk>Plesk</Plesk>
			<Cpanel>Cpanel</Cpanel>
			<NullSystem>Ручное управление</NullSystem>
		</Options>
		<Check>/^[A-Za-zА-Яа-я0-9\-]{2,25}$/u</Check>
		<Attribs>
			<size>1</size>
			<style>width: 100%;</style>
			<onchange>SettingsUpdate();</onchange>
			<prompt>Система управления используемая на сервере</prompt>
		</Attribs>
		<IsDuty>1</IsDuty>
		<Value>IspManager4</Value>
	</SystemID>
	<!-- *********************************************************************** -->
	<IP>
		<Check>IP</Check>
		<Comment>IP адрес</Comment>
		<Type>Input</Type>
		<Attribs>
			<prompt>IPv4 адрес на который будут назначаться аккаунты клиентов</prompt>
			<type>text</type>
			<style>width: 100%;</style>
		</Attribs>
		<IsDuty>1</IsDuty>
		<Value />
	</IP>
	<!-- *********************************************************************** -->
        <IPsPool>
		<Check>Text</Check>
		<Comment>Пул IP адресов</Comment>
		<Type>TextArea</Type>
		<Attribs>
			<prompt>IP адрес для создания нового заказа выбирается случайным образом из перечисленных тут адресов</prompt>
			<type>text</type>
			<style>width: 100%;</style>
			<rows>5</rows>
		</Attribs>
		<IsDuty>0</IsDuty>
		<Value />
	</IPsPool>
	<!-- *********************************************************************** -->
	<BalancingFactor>
		<Check>/^[0-9\.]{1,32}$/u</Check>
		<Comment>Приоритет балансировки</Comment>
		<Type>Input</Type>
		<Attribs>
			<prompt>Число, может быть дробным (разделитель - точка). Используется для определения приоритета сервера, при балансировке. Может задаваться по числу процессоров (ядер), или, как какой-то абстрактный множитель, по производительности сервера.</prompt>
			<type>text</type>
			<style>width: 100%;</style>
		</Attribs>
		<IsDuty>1</IsDuty>
		<Value>4.0</Value>
	</BalancingFactor>
	<!-- *********************************************************************** -->
	<IsAutoBalancing>
		<Check>Char</Check>
		<Comment>Автобалансировка</Comment>
		<CommentAttribs>
			<style>cursor:pointer;</style>
			<onclick>ChangeCheckBox('IsAutoBalancing'); return false;</onclick>
			<prompt>Сервер принимает участие в автобалансировке - т.е. может быть автоматически назначен сервером по-умолчанию</prompt>
		</CommentAttribs>
		<Type>Input</Type>
		<Attribs>
			<type>checkbox</type>
		</Attribs>
		<IsDuty>0</IsDuty>
		<Value>yes</Value>
	</IsAutoBalancing>
	<!-- *********************************************************************** -->
	<NoRestartCreate>
		<Title>Параметры перезапуска веб сервера (только для ISPmanager)</Title>
		<Check>Char</Check>
		<Comment>Не перезапускать при Create</Comment>
		<CommentAttribs>
			<style>cursor:pointer;</style>
			<onclick>ChangeCheckBox('NoRestartCreate'); return false;</onclick>
		</CommentAttribs>
		<Type>Input</Type>
		<Attribs>
			<type>checkbox</type>
		</Attribs>
		<IsDuty>0</IsDuty>
		<Value />
	</NoRestartCreate>
	<!-- *********************************************************************** -->
	<NoRestartActive>
		<Check>Char</Check>
		<Comment>Не перезапускать при Active</Comment>
		<CommentAttribs>
			<style>cursor:pointer;</style>
			<onclick>ChangeCheckBox('NoRestartActive'); return false;</onclick>
		</CommentAttribs>
		<Type>Input</Type>
		<Attribs>
			<type>checkbox</type>
		</Attribs>
		<IsDuty>0</IsDuty>
		<Value />
	</NoRestartActive>
	<!-- *********************************************************************** -->
	<NoRestartSuspend>
		<Check>Char</Check>
		<Comment>Не перезапускать при Suspend</Comment>
		<CommentAttribs>
			<style>cursor:pointer;</style>
			<onclick>ChangeCheckBox('NoRestartSuspend'); return false;</onclick>
		</CommentAttribs>
		<Type>Input</Type>
		<Attribs>
			<type>checkbox</type>
		</Attribs>
		<IsDuty>0</IsDuty>
		<Value>yes</Value>
	</NoRestartSuspend>
	<!-- *********************************************************************** -->
	<NoRestartDelete>
		<Check>Char</Check>
		<Comment>Не перезапускать при Delete</Comment>
		<CommentAttribs>
			<style>cursor:pointer;</style>
			<onclick>ChangeCheckBox('NoRestartDelete'); return false;</onclick>
		</CommentAttribs>
		<Type>Input</Type>
		<Attribs>
			<type>checkbox</type>
		</Attribs>
		<IsDuty>0</IsDuty>
		<Value>yes</Value>
	</NoRestartDelete>
	<!-- *********************************************************************** -->
	<NoRestartSchemeChange>
		<Check>Char</Check>
		<Comment>Не перезапускать при SchemeChange</Comment>
		<CommentAttribs>
			<style>cursor:pointer;</style>
			<onclick>ChangeCheckBox('NoRestartSchemeChange'); return false;</onclick>
		</CommentAttribs>
		<Type>Input</Type>
		<Attribs>
			<type>checkbox</type>
		</Attribs>
		<IsDuty>0</IsDuty>
		<Value />
	</NoRestartSchemeChange>
	<!-- *********************************************************************** -->
	<!-- *********************************************************************** -->
	<Domain>
		<Title>Пользовательские аккаунты</Title>
		<Check>Domain</Check>
		<Comment>Доменный адрес</Comment>
		<Type>Input</Type>
		<Attribs>
			<prompt>Используется при создании служебных доменов для аккаунтов клиентов</prompt>
			<type>text</type>
			<style>width: 100%;</style>
		</Attribs>
		<IsDuty>1</IsDuty>
		<Value>test.su</Value>
	</Domain>
	<!-- *********************************************************************** -->
	<Prefix>
		<Check>/^[a-z\.\-]{1,3}$/u</Check>
		<Comment>Префикс имени аккаунта</Comment>
		<Type>Input</Type>
		<Attribs>
			<prompt>Используется при назначении имени пользовательского аккаунта. Имена аккаунтов для клиентов, с целью уникальности назначаются в виде: префикс00000, где 00000 - номер заказа, например: h10212</prompt>
			<type>text</type>
			<style>width: 100%;</style>
		</Attribs>
		<IsDuty>1</IsDuty>
		<Value>h</Value>
	</Prefix>
	<!-- *********************************************************************** -->
	<!-- *********************************************************************** -->
	<Theme>
		<Title>Параметры панели управления</Title>
		<Check>/^[a-zA-Z0-9\.\-]{2,32}$/u</Check>
		<Comment>Тема</Comment>
		<Type>Input</Type>
		<Attribs>
			<prompt>Тема устанавливаемая клиенту при переходе в панель управления заказом хостинга</prompt>
			<type>text</type>
			<style>width: 100%;</style>
		</Attribs>
		<IsDuty>0</IsDuty>
		<Value />
	</Theme>
	<!-- *********************************************************************** -->
	<Language>
		<Check>/^[a-zA-Z0-9\.\-]{1,32}$/u</Check>
		<Comment>Язык</Comment>
		<Type>Input</Type>
		<Attribs>
			<prompt>Язык устанавливаемый клиенту при переходе в панель управления заказом хостинга</prompt>
			<type>text</type>
			<style>width: 100%;</style>
		</Attribs>
		<IsDuty>1</IsDuty>
		<Value>Default</Value>
	</Language>
	<!-- *********************************************************************** -->
	<Url>
		<Check>Char</Check>
		<Comment>Адрес входа для клиентов</Comment>
		<Type>Input</Type>
		<Attribs>
			<prompt>На какой URL необходимо логинится клиентам для входа в панель управления заказом хостинга</prompt>
			<type>text</type>
			<style>width: 100%;</style>
		</Attribs>
		<IsDuty>1</IsDuty>
		<Value>https://srv1.isp.su/manager/ispmgr</Value>
	</Url>
	<!-- *********************************************************************** -->
	<!-- *********************************************************************** -->
	<Ns1Name>
		<Title>Сервера имен</Title>
		<Check>DnsDomain</Check>
		<Comment>Первичный</Comment>
		<Type>Input</Type>
		<Attribs>
			<prompt>Сервер DNS на котором будут размещены доменные зоны клиентских сайтов</prompt>
			<type>text</type>
			<style>width: 100%;</style>
		</Attribs>
		<IsDuty>1</IsDuty>
		<Value>ns1.isp.su</Value>
	</Ns1Name>
	<!-- *********************************************************************** -->
	<Ns2Name>
		<Check>DnsDomain</Check>
		<Comment>Вторичный</Comment>
		<Type>Input</Type>
		<Attribs>
			<prompt>Сервер DNS на котором будут размещены доменные зоны клиентских сайтов</prompt>
			<type>text</type>
			<style>width: 100%;</style>
		</Attribs>
		<IsDuty>1</IsDuty>
		<Value>ns2.isp.su</Value>
	</Ns2Name>
	<!-- *********************************************************************** -->
	<Ns3Name>
		<Check>DnsDomain</Check>
		<Comment>Дополнительный</Comment>
		<Type>Input</Type>
		<Attribs>
			<prompt>Сервер DNS на котором будут размещены доменные зоны клиентских сайтов</prompt>
			<type>text</type>
			<style>width: 100%;</style>
		</Attribs>
		<IsDuty>0</IsDuty>
		<Value />
	</Ns3Name>
	<!-- *********************************************************************** -->
	<Ns4Name>
		<Check>DnsDomain</Check>
		<Comment>Расширенный</Comment>
		<Type>Input</Type>
		<Attribs>
			<prompt>Сервер DNS на котором будут размещены доменные зоны клиентских сайтов</prompt>
			<type>text</type>
			<style>width: 100%;</style>
		</Attribs>
		<IsDuty>0</IsDuty>
		<Value />
	</Ns4Name>
	<!-- *********************************************************************** -->
	<!-- *********************************************************************** -->
	<MySQL>
		<Title>Параметры подключения к БД MySQL</Title>
		<Check>/^[a-zA-Z0-9\.\-]{1,64}$/u</Check>
		<Comment>Хост MySQL</Comment>
		<Type>Input</Type>
		<Attribs>
			<prompt>Имя хоста сервера баз данных MySQL. Если он расположен на той же машине, что и хостинг - то localhost</prompt>
			<type>text</type>
			<style>width: 100%;</style>
		</Attribs>
		<IsDuty>1</IsDuty>
		<Value>localhost</Value>
	</MySQL>
	<!-- *********************************************************************** -->
</Attribs>
<!-- *********************************************************************** -->
</XML>
